<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/index.css" rel="stylesheet" type="text/css">
    <title>Document</title>
</head>

<body class="body">
    <div class="posts-container">
        <% posts.forEach(function(post){ %>
            <%- include("post", {post: post}); %>
                <% }); %>
    </div>
    <form method="POST" class="form" enctype="multipart/form-data">
        <label for="title">Title:</label>
        <input class="input" name="title" required id="title" value="da" placeholder="Title">
        <label for="text">Text:</label>
        <input class="input" name="text" required id="text" value="net" placeholder="text">
        <label for="date">Date:</label>
        <input class="input" name="date" required id="date" value="2018-01-01" placeholder="title" type="date">
        <label for="file">file:</label>
        <input type="file" name="file" required />
        <button class="submit-button" type="submit">Submit</button>
    </form>
</body>

</html>